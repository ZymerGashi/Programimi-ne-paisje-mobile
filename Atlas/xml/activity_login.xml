<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.atlasi.Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:text="ATLAS"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/imgUP"
        android:layout_marginTop="20dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/uo"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txtNjoftime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ff0000"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />

    <EditText
        android:id="@+id/edtPerdoruesi"
        style="?android:attr/absListViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:autoSizeTextType="uniform"
        android:defaultFocusHighlightEnabled="true"
        android:hint="Perdoruesi ose adresa elektronike"
        android:inputType="textPersonName"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/editFjalekalimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:hint="Fjalëkalimi"
        android:autoSizeTextType="uniform"
        android:textSize="14dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnKyqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text="Kyqu"
        android:textSize="16dp"
        android:onClick="KyquNeSistem"
        />

    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/prgBar"
        />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/btnKeniHarruarFjalekalimin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="#000000"
        android:onClick="BtnShfaq"
        android:text="Krijo alarm"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnKrijoLlogari"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="#5CAF50"
        android:text="Krijo një llogari të re"
        android:textColor="#ffffff"
        android:onClick="btnRegjistrohu"
        />

</LinearLayout>
