<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.atlasi.Register">

    <TextView
        android:id="@+id/txtRegjistrimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regjistrimi"
        android:textSize="25dp"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="#ffb400"
        android:textColor="#ffffff"/>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txtNjoftime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRegjistrimi"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="60dp"
                android:textColor="#ff0000"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNjoftime"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:hint="Emri"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:hint="Mbiemri"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSurname"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:hint="Fjalëkalimi"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_below="@+id/txtPassword"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:hint="Shkruaj përsëri fjalëkalimin"
                />

            <EditText
                android:id="@+id/txtDataLindjes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRepeatPassword"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:hint="Data lindjes"
                android:inputType="date"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtNrTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDataLindjes"
                android:layout_marginLeft="40dp"
                android:maxLines="1"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:hint="Numri telefonit"
                android:inputType="phone"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnRegjistro"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="ruajInformatat"
                android:layout_below="@+id/txtNrTel"
                android:text="Regjistrohu"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="30dp"
                />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>





















