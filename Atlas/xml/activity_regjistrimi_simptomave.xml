<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".regjistrimiSimptomave">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Njihuni me problemet e juaja"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/emjeku"
        android:layout_marginTop="20dp"
        android:id="@+id/imgEmjeku"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Zgjedhni pjesen e trupit në të cilën keni problem:"
        android:textColor="#000"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/listaMePjesetETrupit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>

</LinearLayout>